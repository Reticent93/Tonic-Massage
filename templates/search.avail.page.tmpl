                                        <option value="1">Andrea Johnson</option>
                                        <option value="2">Italo Zafron</option>
                                        <option value="3">Elle McAllister</option>
                                    </select>
                                </div>
                                <div class="col" id="flatpicker" data-date="01/25/2020">
                                    <input required type="text" autocomplete="off" class="form-control" name="book-date"
