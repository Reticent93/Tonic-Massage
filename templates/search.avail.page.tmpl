        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-6">
                <h1 class="mt-3">Search for Availability</h1>
                <form action="/search-availability" method="get" novalidate class="needs-validation">
                    <input type="hidden">
                    <div class="form-row">
                        <div class="col">
                            <div class="row">
                                <div class="col">
                                    <select class="form-select" aria-label="Default select example">
