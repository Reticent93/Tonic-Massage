{{template "base" .}}

{{define "content"}}

    <div class="container bg-light w-50 mt-5 p-3">
        <div class="row ">
            <div class="col-md-3"></div>
            <div class="col-md-6">
                <h1 class="mt-3 text-center text-muted">Book a Massage</h1>
                <form action="/booking" method="post" class="needs-validation" novalidate>
                    <input type="hidden">
                    <div class="form-row">
                        <div class="col p-3">
                            <div class="row gy-5" id="reservation-dates">
                                <div class="col p-3">
                                    <input required type="text" autocomplete="off" class="form-control" name="name"
                                           placeholder="Name">
                                </div>
                                <div class="col p-3">
                                    <input required type="email" autocomplete="off" class="form-control" name="email"
                                           placeholder="Email">
                                </div>
                            </div>
                            <div class="row" id="reservation-dates">
                                <div class="col p-3">
                                    <input required type="date" autocomplete="off" class="form-control" name="date"
                                           placeholder="Date">
                                </div>
                                <div class="col p-3">
                                    <input required type="time" autocomplete="off" class="form-control" name="time"
                                           placeholder="Time">
                                </div>
                            </div>
                            <div class="row" id="reservation-dates">
                                <div class="col p-3">
                                    <input required type="text" autocomplete="off" class="form-control" name="treatment"
                                           placeholder="Treatment">
                                </div>
                                <div class="col p-3 input-group">
                                    <textarea required type="text" autocomplete="off" class="form-control" name="message"
                                              placeholder="Message"></textarea>
                                </div>
                            </div>
                        </div>
                    </div>
                    <hr>
                    <button type="submit" class="btn btn-primary">Book Now</button>
                </form>
            </div>
        </div>
    </div>

{{end}}